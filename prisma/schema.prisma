generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
    customer
    sale
}

enum DeliveryStatus {
    acepted
    production
    shipped
    delivered
}

model User {
    id String @id @default(uuid())
    name String
    email String
    password String
    role UserRole @default(customer)
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime? @updatedAt @map("updated_at")

    deliveries Delivery[]
    @@map("users")
}


model Delivery {
    id String @id @default(uuid())
    userId String @map("user_id")
    description String
    status DeliveryStatus @default(acepted)
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime? @updatedAt @map("updated_at")

    user User @relation(fields: [userId], references: [id])
    
    @@map("deliveries")
}
